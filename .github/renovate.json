{
  "extends": ["config:base"],
  "gradle": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true
  },
  "schedule": ["before 9am on the 1st day of the month"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^org.apache.lucene"],
      "groupName": "Lucene dependencies",
      "reviewers": ["shaikhu"]
    },
    {
      "matchPackagePatterns": ["^org.apache.tika"],
      "groupName": "Tika dependencies", 
      "reviewers": ["shaikhu"]
    },
    {
      "matchPackagePatterns": ["^org.apache.commons"],
      "groupName": "Apache Commons dependencies",
      "reviewers": ["shaikhu"]
    },
    {
      "matchUpdateTypes": ["minor","patch"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["major"],
      "reviewers": ["shaikhu"]
    }
  ],
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "deps:",
  "rebaseWhen": "conflicted"
}
